{
  "manifest_version": 3,
  "name": "Starsarena on X",
  "version": "1.2",
  "description": "Add a custom starsarena link to Twitter profiles",
  "permissions": [
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*"
      ],
      "js": [
        "ethers-5.4.umd.min.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "icon.png",
        "tip.png",
        "fees_earned.webp",
        "follower_count.png",
        "following_count.webp",
        "holder_count.png",
        "portfolio.png",
        "sells.webp",
        "buys.webp",
        "injectedScript.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.twitter.com/*"
  ]
}
